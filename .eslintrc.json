{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": [
      "error",
      {
        "ignoreRegExpLiterals": true,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true,
        "code": 120,
        "tabWidth": 2
      }
    ],
    "no-unused-vars": [
      "error", 
      { 
        "argsIgnorePattern": "^_" 
      }
    ]
  }
}